<?xml version="1.0" encoding="utf-8"?>
<com.shabit.tourthepast.view.SelectorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_ttp_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_ttp_list_recycler_item_size"
    android:listSelector="@drawable/selector_clickable_item_bg_inverse"
    android:minHeight="@dimen/fragment_ttp_list_recycler_item_size">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_ttp_list_recycler_item_size"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/category_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_ttp_list_recycler_item_size"
        android:layout_alignParentBottom="true"
        android:background="@color/fragment_ttp_list_recycler_item_panel_bg"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="3"
        android:paddingLeft="@dimen/global_spacing_xs"
        android:paddingRight="@dimen/global_spacing_xxs"
        android:textAppearance="@style/TextAppearance.Ttp.Body1.Inverse"
        android:textSize="20dp" />

</com.shabit.tourthepast.view.SelectorRelativeLayout>